<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_class"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="课程名称"/>
        <EditText
            android:id="@+id/act_class_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="课程名"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="课程编号"/>
        <EditText
            android:id="@+id/act_class_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="编号"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="教师"/>
        <EditText
            android:id="@+id/act_class_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="教师名"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="教室"/>
        <EditText
            android:id="@+id/act_class_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="地点"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="周数"/>
        <EditText
            android:id="@+id/act_class_start_week"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="开始"/>
        <TextView
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="——"/>
        <EditText
            android:id="@+id/act_class_end_week"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="结束"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="时间"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/act_class_week_1"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="周几"/>
                <EditText
                    android:id="@+id/act_class_start_time_1"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="开始1"/>
                <TextView
                    android:layout_width="@dimen/text_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="——"/>
                <EditText
                    android:id="@+id/act_class_end_time_1"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="结束1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/act_class_week_2"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="周几"/>
                <EditText
                    android:id="@+id/act_class_start_time_2"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="开始2"/>
                <TextView
                    android:layout_width="@dimen/text_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="——"/>
                <EditText
                    android:id="@+id/act_class_end_time_2"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="结束2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>